<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workout Tracker | Exercises</title>
</head>
<body>
    <header>
        <h1>Exercises</h1>
        <nav>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/exercises/new">Create New Exercise</a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>List of Exercises</h2>
        <ul>
            <% exercises.forEach(exercise => { %>
                <li>
                    <a href="/exercises/<%= exercise._id %>"><%= exercise.name%></a> on <%= new Date(exercise.createdAt).toLocaleDateString()%>
                </li>
                
            <% }); %>
        </ul>
    </main>
</body>
</html>